<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/set_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_right" />

    <Button
        android:id="@+id/set_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/set_right_button"
        android:text="@string/set_left" />

    <Button
        android:id="@+id/get_hand_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_right_button"
        android:text="@string/get_hand" />

    <TextView
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_hand_button"
        android:text="@string/log" />

</RelativeLayout>
